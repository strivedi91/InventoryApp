@model InventoryApp.Areas.Admin.Models.CategoryModel
@{
    ViewBag.Title = "Manage Category";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<section>
    <div class="section-title">
        <h2>Category</h2>
    </div>
    <form style="padding-top:0px;">
        <div style="padding-top:0px" class="add-card ">
            <div class="btn-block">
                <a href="@Url.RouteUrl("Admin_default", new { action = "AddEditCategory", controller = "Category" })" class="btn toggle">Add New Category <i class="fa fa-plus-square-o" aria-hidden="true"></i></a>
            </div>
        </div>

        <div class="white-box bg-white space">
            <div class="row">
                <div class="col-lg-5">
                </div>
                <div class="col-lg-5">
                    <input type="text" class="form-control" id="txtSearch" maxlength="100" placeholder="Search by category name ..." onkeypress="userSearch(event);">
                </div>
                <div class="col-lg-2">
                    <button type="button" id="btnSearch" class="btn btn-gradient" onclick="search();">Search</button>
                </div>
            </div>
        </div>
    </form>
    <div id="categorylist">
        @Html.Partial("_Category", Model)
    </div>
    @Html.Hidden("hdnOrder", "Name ASC")
    @Html.Hidden("hdnSortingOnColumn", "sortName")
    @Html.Hidden("hdnSortingDirection", "ASC")
    <script type="text/javascript">
        var lsgetGiftCardList = '@Url.RouteUrl("Admin_default", new { controller = "Category", action = "searchCategory" })';
        var deleteGiftCardUrl = '@Url.RouteUrl("Admin_default", new { controller = "Category", action = "DeleteCategory" })';
        var lsGetGiftCardUrl = "@Url.RouteUrl("Admin_default", new { controller = "Category", action = "" })";
    </script>
    <script src="@Url.Content("~/Areas/Admin/assets/scripts/Category.js?ver=1.3")" type="text/javascript"></script>
</section>

<script>
    $(document).ready(function () {
        $(".menu-item a").removeClass("active");
        $('#lnkCategory').addClass('active');
    });
</script>


