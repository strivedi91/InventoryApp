@model InventoryApp.Areas.Admin.Models.UserModel
@{
    ViewBag.Title = "Manage User";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section>
    <div class="section-title">
        <h2>Manage Seller</h2>
    </div>
    <form style="padding-top:0px">
        <div class="add-card ">
            <div class="btn-block">
                <a href="@Url.RouteUrl("Admin_default", new { action = "AddEditUser", controller = "ManageUsers" })" class="btn toggle">Add New Seller <i class="fa fa-plus-square-o" aria-hidden="true"></i></a>
            </div>
        </div>
        <div class="white-box bg-white space">
            <div class="row">
                <div class="col-lg-5">
                </div>
                <div class="col-lg-5">
                    <input type="text" class="form-control" id="txtSearch" maxlength="100" placeholder="Search by seller name ..." onkeypress="userSearch(event);">
                </div>
                <div class="col-lg-2">
                    <button type="button" id="btnSearch" class="btn btn-gradient" onclick="search();">Search</button>
                </div>
            </div>
        </div>
    </form>
    <div id="companylist">
        @Html.Partial("_ManageUser", Model)
    </div>
    @Html.Hidden("hdnOrder", "ID ASC")
    @Html.Hidden("hdnSortingOnColumn", "sortID")
    @Html.Hidden("hdnSortingDirection", "ASC")
    @Html.Hidden("hdnStatus", "0")

    <script type="text/javascript">
        var lsgetUserList = '@Url.RouteUrl("Admin_default", new { controller = "ManageUsers", action = "searchUser" })';
        var deleteUserUrl = '@Url.RouteUrl("Admin_default", new { controller = "ManageUsers", action = "DeleteUser" })';
        var lsGetUserUrl = "@Url.RouteUrl("Admin_default", new { controller = "ManageUsers", action = "" })";
    </script>
    <script src="@Url.Content("~/Areas/Admin/assets/scripts/Users.js?ver=1.3")" type="text/javascript"></script>
</section>
<script>
    $(document).ready(function () {
        $(".menu-item a").removeClass("active");
        $('#lnkManageSellers').addClass('active');
    });
</script>
